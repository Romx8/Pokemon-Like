<UserControl x:Class="Pokemon_Like.MVVM.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pokemon_Like.MVVM.View" 
             xmlns:vm="clr-namespace:Pokemon_Like.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=vm:LoginVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Username" HorizontalAlignment="Left" Margin="300,100,300,100"/>
        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                 HorizontalAlignment="Left" Margin="300,120,300,120"/>

        <TextBlock Text="Password" HorizontalAlignment="Left" Margin="300,140,300,140"/>
        <PasswordBox HorizontalAlignment="Left" Margin="300,160,300,160"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <Button Content="Login" Command="{Binding LoginCommand}" Background="#FF228AE5" 
                Margin="300,190,300,190"/>
    </Grid>
</UserControl>
